@model TristanWebsite.Models.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="column left">
        <div class="card">
            <div class="card-body">
                <img class="img-circle" style="margin: auto; display:block; margin-bottom:10px;" src="@Url.Content(Model.athlete.Profile)">
                <div class="card-title text-center">
                    <h2>
                        @Model.athlete.FirstName @Model.athlete.LastName
                    </h2>
                </div>
                <div class="row">
                    <div class="evenLeft centerColumn">
                        <span class="material-symbols-outlined">
                            directions_bike
                        </span>
                        <h6>
                            Rides
                        </h6>
                        <div class="card-subtitle">
                            @Model.athlete.ActivityStats.All_Ride_totals.Count
                        </div>
                    </div>
                    <div class="vertical"></div>
                    <div class="evenCenter centerColumn">
                        <span class="material-symbols-outlined">
                            distance
                        </span>
                        <h6>
                            Total Distance
                        </h6>
                        <div class="card-subtitle">
                            @Html.DisplayFor(model => model.athlete.ActivityStats.All_Ride_totals.Distance) mi
                        </div>
                    </div>
                    <div class="vertical"></div>
                    <div class="evenRight centerColumn">
                        <span class="material-symbols-outlined">
                            schedule
                        </span>
                        <h6>
                            Total Time
                        </h6>
                        <div class="card-subtitle">
                            @Model.athlete.ActivityStats.All_Ride_totals.Elaspsed_Time_Str
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="middle column">
        @foreach (var activity in Model.activities)
        {
            <div class="card" style="margin-bottom:10px;">
                <div class="card-body">
                    <div class="row">
                        <img class="img-circle" src="@Url.Content(Model.athlete.Profile)" style="padding:0; margin:10px; width:64px; height:64px;">
                        <div class="card-title" style="width:auto; align-content: center;">
                            <h2>
                                @activity.Name
                            </h2>
                            <div class="card-subtitle">
                                @activity.Start_Date_Formatted at @activity.Start_Time_Formatted
                            </div>
                            <div class="card-subtitle" style="font-size:small">
                                @activity.Location
                            </div>
                        </div>
                    </div>
                    <img src="@Url.Content(activity.Map.MapImageURL)" style="margin:auto; border-radius:10px; display:block;"/>
                    <hr/>
                    <div class="row">
                        <div class="evenLeft centerColumn">
                            <span class="material-symbols-outlined">
                                distance
                            </span>
                            <h6>
                                Distance
                            </h6>
                            <div class="card-text">
                                @Html.DisplayFor(item => activity.Distance) mi
                            </div>
                        </div>
                        <div class="vertical"></div>

                        <div class="evenCenter centerColumn">
                            <span class="material-symbols-outlined">
                                elevation
                            </span>
                            <h6>
                                Elevation Gain
                            </h6>
                            <div class="card-text">
                                @Html.DisplayFor(item => activity.Total_Elevation_Gain) ft
                            </div>
                        </div>
                        <div class="vertical"></div>

                        <div class="evenRight centerColumn">
                            <span class="material-symbols-outlined">
                                schedule
                            </span>
                            <h6>
                                Time
                            </h6>
                            <div class="card-text">
                                @activity.Moving_Time_Str
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="evenLeft centerColumn">
                            <span class="material-symbols-outlined">
                                Speed
                            </span>
                            <h6>
                                Avg. Speed
                            </h6>
                            <div class="card-text">
                                @Html.DisplayFor(item => activity.Average_Speed)mi/h
                            </div>
                        </div>
                        <div class="vertical"></div>

                        <div class="evenCenter centerColumn">
                            <span class="material-symbols-outlined">
                                Exercise
                            </span>
                            <h6>
                                Avg. Power
                            </h6>
                            <div class="card-text">
                                @Html.DisplayFor(item => activity.Average_Watts)w
                            </div>
                        </div>
                        <div class="vertical"></div>

                        <div class="evenRight centerColumn">
                            <span class="material-symbols-outlined">
                                Favorite
                            </span>
                            <h6>
                                Avg. HR
                            </h6>
                            <div class="card-text">
                                @Html.DisplayFor(item => activity.Average_Heartrate)bpm
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="column right">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h4>
                        Recent Rides
                    </h4>
                </div>
                <div class="row">
                    <div class="evenLeft centerColumn">
                        <span class="material-symbols-outlined">
                            directions_bike
                        </span>
                        <h6>
                            Rides
                        </h6>
                        <div class="card-subtitle">
                            @Model.athlete.ActivityStats.Recent_Ride_Totals.Count
                        </div>
                    </div>
                    <div class="vertical"></div>
                    <div class="evenCenter centerColumn">
                        <span class="material-symbols-outlined">
                            distance
                        </span>
                        <h6>
                            Total Distance
                        </h6>
                        <div class="card-subtitle">
                            @Html.DisplayFor(model => model.athlete.ActivityStats.Recent_Ride_Totals.Distance) mi
                        </div>
                    </div>
                    <div class="vertical"></div>
                    <div class="evenRight centerColumn">
                        <span class="material-symbols-outlined">
                            schedule
                        </span>
                        <h6>
                            Total Time
                        </h6>
                        <div class="card-subtitle">
                            @Model.athlete.ActivityStats.Recent_Ride_Totals.Elaspsed_Time_Str
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .container {
        max-width: 90%;
    }
    .img-circle {
        border-radius: 50%;
        object-fit: cover;
    }
    hr {
        background-color: #DEDEDE;
        opacity: 1;
    }
    .row {
        align-content:center;
    }
    .centerColumn{
        text-align:center;
        height:100%;
    }
    .column {
        float: left;
        height: 100%;
    }
    .evenLeft, .evenRight, .evenCenter {
        width: 33%;
    }
    .left, .right {
        width:25%;
    }
    .middle {
        width:50%;
    }
    .card {
        background-color: #F7F7FA;
        box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;
    }
    .vertical {
        width: 1px;
        border-left: 1px solid #DEDEDE;
        height: inherit;
        padding: 0;
    }
</style>